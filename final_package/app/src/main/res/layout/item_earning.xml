<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="April 13, 2025"
                android:textAppearance="@style/TextAppearance.Cruzo.Body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEarningAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EGP 75.00"
                android:textAppearance="@style/TextAppearance.Cruzo.Body"
                android:textStyle="bold"
                android:textColor="@color/cruzo_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivServiceLogo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_uber"
                android:contentDescription="Service logo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvServiceInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uber Economy"
                android:textAppearance="@style/TextAppearance.Cruzo.Caption" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textAppearance="@style/TextAppearance.Cruzo.Caption" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nasr City â†’ Maadi"
                android:textAppearance="@style/TextAppearance.Cruzo.Caption" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_distance"
                    android:contentDescription="Distance"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.5 km"
                    android:textAppearance="@style/TextAppearance.Cruzo.Caption" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
